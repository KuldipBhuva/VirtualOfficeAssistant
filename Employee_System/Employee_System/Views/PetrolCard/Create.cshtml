  @{ 
   ViewBag.Title = "Petrol Card";
}
  
@using EMSDomain.ViewModel.Vehicle

@model PetrolCardItem

@using (@Html.BeginForm("Create", "PetrolCard", FormMethod.Post))
{
    <section class="content-header">
        <h1>Petrol Card <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">Dashboard</li>
        </ol> 
    </section>
    
    <div class="panel panel-info">
        <div class="panel-heading">Petrol Card Details</div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(m => m.VID, new { @class = "col-sm-2 control-label" })

                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.VID, new SelectList(Model.ListVehicle, "vid", "VehicleName"), "--Select Vehicle--", new { @class="form-control"})
                </div>
                @Html.LabelFor(m => m.VID, new { @class="col-sm-2 control-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.PetroCardNo, new { @class="form-control"})
                </div>
                <div class="col-sm-12" style="height: 5px;"></div>

                @Html.LabelFor(m => m.PetrolCardNameID, new { @class = "col-sm-2 control-label" })

                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.PetrolCardNameID, new SelectList(Model.ListMaster1, "id", "Name"), "--Select Petrol Card--", new { @class="form-control"})
                </div>
                @Html.LabelFor(m => m.PaymentModeID, new { @class = "col-sm-2 control-label" })

                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.PaymentModeID, new SelectList(Model.ListMaster, "id", "Name"), "--Select Payment Mode--", new { @class="form-control"})
                </div>
                <div class="col-sm-12" style="height: 5px;"></div>

                @Html.LabelFor(m => m.IssueDate, new { @class="col-sm-2 control-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.IssueDate, new { @class="form-control"})

                </div>
                @Html.LabelFor(m => m.ExpireDate, new { @class="col-sm-2 control-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.ExpireDate, new { @class="form-control"})

                </div>
                <div class="col-sm-12" style="height: 5px;"></div>

                @Html.LabelFor(m => m.Remarks, new { @class="col-sm-2 control-label"})
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Remarks, new { @class="form-control"})

                </div>
                @Html.LabelFor(m => m.Status, new { @class = "col-sm-2 conrol-label" })
                <div class="col-sm-4">
                    @Html.RadioButtonFor(m => m.Status, "Active", new { @class = "flat-red" }) Active
                                        @Html.RadioButtonFor(m => m.Status, "InActive", new { @class = "flat-red" }) In-Active
                    @Html.ValidationMessageFor(m => m.Status)
                </div>
                <div class="col-sm-12" style="height: 5px;"></div>
            <div class="col-xs-10">
                <div class="col-sm-3" style="width: 180px;"></div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </div>
    </div>
}