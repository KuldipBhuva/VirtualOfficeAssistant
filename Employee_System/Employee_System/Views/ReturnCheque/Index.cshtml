@{ 
    ViewBag.Title = "Return Cheque Details";
}

@using EMSDomain.ViewModel

@model ChequeReturnModel
<style type="text/css">.thumb-image{float:left;width:100px;height:110px;border: 1px solid #5bc0de;position:relative;padding:5px;}</style>
@using (@Html.BeginForm("Index", "ReturnCheque", FormMethod.Post, new { @id = "frmCreateEmployee", enctype = "multipart/form-data" }))
{
      @Html.HiddenFor(m => m.Viewbagidformenu, new { @Value = @ViewBag.Menuid })
    
    <section class="content-header">
        <h1>Return Cheque <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
        <div class="panel panel-info" id="dvAdd">
            <div class="panel-heading">Cheque Details <input type="button" id="btnBack" value="Back" class="btnAdd btn btn-primary" /></div>
            <div class="panel-body">
                <div class="form-group">

                    @Html.Label("* Client Name", new { @class = "col-sm-2 control-label" })
