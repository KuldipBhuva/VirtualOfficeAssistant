  @{ 
   ViewBag.Title = "Assets Item";
}
  
@using EMSDomain.ViewModel.Assests

@model  AssestsItem
@{
    
}
@using (@Html.BeginForm("Create", "Item", FormMethod.Post))
{
  
    <section class="content-header">
        <h1>Item <small>Master</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Dashboard/Index"><i class="fa fa-dashboard"></i>Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    @Html.HiddenFor(m => m.ItemId)
      
    <div class="panel panel-info" id="dvAdd">
        <div class="panel-heading">Item Details
             <input type="button" id="btnBack" value="Back" class="btnAdd btn btn-primary" />
        </div>
        <div class="panel-body">
            <div class="form-group">
                      @Html.Label("Company ", new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.CompID, new SelectList(Model.ListCompany, "id", "CompName"), "--Select Company--", new { @class = "form-control select2", @id = "ddlComp" })
                    @Html.ValidationMessageFor(m => m.CompID)
                </div>
                @*    @Html.LabelFor(m => m.Branch_ID, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.Branch_ID, new SelectList(Model.ListBranch, "id", "BranchName"), "--Select Branch--", new { @class = "form-control", @id = "Branch_ID" })

                </div>*@
                <div class="col-sm-12" style="height: 5px;"></div>
                @Html.LabelFor(m => m.CatId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.CatId, new SelectList(Model.lstCategory, "Cat_id", "CatName"), "--Select Category--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CatId)
                </div>

                @Html.LabelFor(m => m.ItemName, new { @class = "col-sm-2 control-label" })

                @*  @Html.EditorFor(model => model.CompName, new { htmlAttributes = new { @class = "form-control" } })  *@

                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.ItemName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ItemName)

                </div>
                <div class="col-sm-12" style="height: 5px;"></div>

                @Html.LabelFor(m => m.ItemDesc, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.ItemDesc, new { @class = "form-control" })
                </div>

                @Html.LabelFor(m => m.OpStock, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.OpStock, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OpStock)
                </div>


                <div class="col-sm-12" style="height: 5px;"></div>
                <div class="col-xs-10">
                    <div class="col-sm-3" style="width: 179px;"></div>
                    <input type="Submit" value="Save" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>
    <div class="panel panel-info" id="dvGrid">
        <div class="panel-heading">Items List <span class="label label-primary">@Model.lstOfItems.Count</span>
            <input type="button" id="btnAdd" value="Add New" class="btnAdd btn btn-primary" />
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table" id="tbl">
                    <thead>
                        <tr>
                             <th>Category</th>
                            <th>Item Name</th>
                            <th>Stock</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.lstOfItems)
                        {
                            <tr>
                                 <td>@item.CatName</td>
                                <td>@item.ItemName</td>
                                <td>@item.OpStock</td>
                                <td>@Html.ActionLink(" ", "Edit", new { @ItemId = @item.ItemId, @menuId = Convert.ToInt32(Request.QueryString["menuid"]) }, new { @class = "fa fa-pencil-square fa-lg" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
}


